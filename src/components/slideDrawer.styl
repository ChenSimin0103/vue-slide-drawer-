
.drawer-wrapper-enter, .drawer-wrapper-leave-to
  transition: all 0.5s ease;
  opacity: 0;
  transform: translateY( 180px );
.drawer-wrapper-enter-to, .drawer-wrapper-leave
  transition: all 0.5s ease;
  transform: translateY(0);


.drawer-container
  position fixed
  left 0
  bottom 0
  width 100%
  height auto
  background greenyellow
  .drawer
    padding 0 5%
    .item-container
      display flex
      flex-direction row
      flex-wrap wrap
      //flex-flow row || wrap
      justify-content space-between
      padding 0
      .item
        list-style-type none
        flex: 0 1 auto
        width: 15%
        height 100px
        margin 0 10px
        background mistyrose
        .img
          display inline-block
          width 50px
          height 50px
          background-size 50px
          border-radius 50%
          //background-color royalblue
          //background-image url("adv_childLock_unset.png")
          &.active
            background-image url("adv_childLock_set.png")


